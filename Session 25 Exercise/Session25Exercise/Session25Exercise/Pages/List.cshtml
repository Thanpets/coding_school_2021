        <th>Id</th>
        <th>Name</th>
        <th>Surname</th>
        <th>AFM</th>
        <th>Active</th>
    </tr>


    @foreach (var item in Model.CustomerItems)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.AFM</td>
            <td>@item.Active</td>
            <td><a href="CustomerDetails/@item.Id">Edit</a></td>
        </tr>
    }
</table>
 
