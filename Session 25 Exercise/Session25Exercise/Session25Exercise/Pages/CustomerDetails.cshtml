@page "{id}"
@model Session25Exercise.Pages.CustomerDetailsModel
@{
}


<div>
    <form id="frmMain" method="post" class="mt-3">
        <input hidden asp-for="SelectedListItem.Id">

        <div class="form-group row">
            <label asp-for="SelectedListItem.Name" class="col-sm-2 col-form-label">
            </label>
            <div class="col-sm-10">
                <input asp-for="SelectedListItem.Name" class="form-control" placeholder="Name">
                <span asp-validation-for="SelectedListItem.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="SelectedListItem.Surname" class="col-sm-2 col-form-label">
            </label>
            <div class="col-sm-10">
                <input asp-for="SelectedListItem.Surname" class="form-control" placeholder="Surname">
                <span asp-validation-for="SelectedListItem.Surname" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="SelectedListItem.AFM" class="col-sm-2 col-form-label">
            </label>
            <div class="col-sm-10">
                <input asp-for="SelectedListItem.AFM" class="form-control" placeholder="AFM">
                <span asp-validation-for="SelectedListItem.AFM" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="SelectedListItem.Active" class="col-sm-2 col-form-label">
            </label>
            <div class="col-sm-10">
                <input asp-for="SelectedListItem.Active" class="form-control" placeholder="False">
                <span asp-validation-for="SelectedListItem.Active" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Create/Edit" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="List" class="btn btn-success form-control">Cancel</a>
            </div>
            @if (Model.SelectedListItem.Id > 0)
            {
                <div class="col-3">
                    <button asp-page-handler="delete" class="btn btn-danger form-control">Delete</button>
                </div>}
        </div>
  
    </form>
</div>
